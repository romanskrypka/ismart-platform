{
  "name": "ismart-platform",
  "version": "1.0.0",
  "scripts": {
    "watch:css": "nodemon --watch assets/css -e css --exec 'npm run build:css'",
    "build:css": "node scripts/css-hash.js",
    "build:css:prod": "cross-env NODE_ENV=production npm run build:css",
    "watch:js": "nodemon --watch assets/js -e js --exec 'npm run build:js'",
    "build:js": "webpack --config webpack.config.js",
    "build:js:prod": "cross-env NODE_ENV=production npm run build:js",
    "clean:assets": "node scripts/clean-assets.js",
    "watch": "concurrently \"npm run watch:css\" \"npm run watch:js\"",
    "dev": "npm run watch",
    "build:dev": "npm run build:css && npm run build:js && npm run clean:assets",
    "build": "cross-env NODE_ENV=production npm run build:css && cross-env NODE_ENV=production npm run build:js && npm run clean:assets",
    "create-section": "node scripts/create-section.js",
    "create-component": "node scripts/create-component.js",
    "create-page": "node scripts/create-page.js",
    "generate-favicons": "node scripts/generate-favicons.js",
    "validate-json": "node scripts/validate-json.js data/json",
    "fix-permissions": "sudo bash scripts/fix-permissions.sh"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "cssnano": "^6.0.5",
    "favicons": "^7.2.0",
    "file-loader": "^6.2.0",
    "glob": "^10.3.10",
    "nodemon": "^3.1.7",
    "postcss": "^8.4.49",
    "postcss-cli": "^11.0.0",
    "postcss-custom-media": "^11.0.5",
    "postcss-custom-properties": "^14.0.4",
    "postcss-hash": "^3.0.0",
    "postcss-import": "^16.1.0",
    "postcss-loader": "^8.1.1",
    "postcss-nested": "^7.0.2",
    "postcss-preset-env": "^10.1.5",
    "postcss-url": "^10.1.3",
    "style-loader": "^4.0.0",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1",
    "webpack-manifest-plugin": "^5.0.1"
  },
  "dependencies": {
    "animate.css": "^4.1.1",
    "glightbox": "^3.3.1",
    "inputmask": "^5.0.9",
    "jquery": "^3.7.1",
    "swiper": "^11.2.5"
  }
}
