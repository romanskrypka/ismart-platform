<div class="spoiler {% if item.active is defined and item.active %}active{% endif %}">
  <div class="spoiler__item title-wrap {% if item.active is defined and item.active %}active{% endif %}">
    <span class="h6 spoiler__item-title font-1-demibold uppercase">{{ item.title | raw }}</span>
    <div class="spoiler__item-icon-wrap"><img src="{{ item.icon.src }}" alt="{{ item.icon.alt }}" class="img-responsive"></div>
  </div>
  <div class="spoiler__item desc-wrap" {% if item.active is defined and item.active %}style="display: flex; max-height: none; overflow: visible;"{% endif %}>
    {% for item in item.items %}
      <div class="spoiler__desc">{{ item | raw }}</div>
    {% endfor %}
  </div>
</div>
